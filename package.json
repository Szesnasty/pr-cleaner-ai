{
    "name": "pr-cleaner-ai",
    "version": "1.2.1",
    "description": "Cursor + GitHub PR cleanup assistant. Local dev tool (install as devDependency).",
    "bin": {
        "pr-cleaner-ai": "dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "postinstall": "node scripts/postinstall.js",
        "prepublishOnly": "npm run build && npm run clean:maps",
        "clean:maps": "find dist -name '*.map' -delete"
    },
    "files": [
        "bin/",
        "dist/",
        "config/pr-cleaner-ai.mdc",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "cursor",
        "github-cli",
        "pull-request",
        "github-pr",
        "code-review",
        "review-comments",
        "automation",
        "developer-tools",
        "developer-productivity",
        "merge-ready"
    ],
    "author": "lukasz.jakubowski1993@gmail.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Szesnasty/pr-cleaner-ai.git"
    },
    "bugs": {
        "url": "https://github.com/Szesnasty/pr-cleaner-ai/issues"
    },
    "homepage": "https://github.com/Szesnasty/pr-cleaner-ai#readme",
    "engines": {
        "node": ">=16"
    },
    "sideEffects": false,
    "dependencies": {
        "tsx": "^4.7.0"
    },
    "peerDependencies": {
        "typescript": ">=4.0.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/node": "^18.19.130",
        "typescript": "^5.0.0"
    },
    "publishConfig": {
        "provenance": true
    }
}
